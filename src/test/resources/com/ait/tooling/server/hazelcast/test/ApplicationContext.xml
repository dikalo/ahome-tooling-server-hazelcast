<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="BootstrapStringCryptoProvider" class="com.ait.tooling.server.core.security.BootstrapStringCryptoProvider">
		<constructor-arg>
			<value>file:/opt/properties/ahome-tooling-server-hazelcast/crypto.properties</value>
		</constructor-arg>
	</bean>

	<bean id="PropertiesProvider" class="com.ait.tooling.server.core.support.spring.CoreEncryptedPropertiesProviderPlaceholderConfigurer">
		<constructor-arg ref="BootstrapStringCryptoProvider"/>
		<constructor-arg value="0xCAFEBABE;"/>
		<property name="locations">
			<list>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/webapp.properties</value>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/pubsub.properties</value>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/jmxapp.properties</value>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/psql93.properties</value>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/mongod.properties</value>
				<value>file:/opt/properties/ahome-tooling-server-hazelcast/hazelc.properties</value>
			</list>
		</property>
		<property name="loggingLevelAsString" value="INFO"/>
	</bean>

	<bean id="AuthorizationProvider" class="com.ait.tooling.server.core.security.AnonOnlyAuthorizationProvider"/>

	<bean id="PrincipalsKeysProvider" class="com.ait.tooling.server.core.support.spring.DefaultPrincipalsKeysProvider"/>

</beans>